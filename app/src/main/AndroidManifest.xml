<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raturu.pertaminanow">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PertaminaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.OtpCodeVerificationActivity" />
        <activity
            android:name=".ui.EditProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.KtpVerificationActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.TransactionDetailActivity" />
        <activity android:name=".ui.VouchersActivity" />
        <activity android:name=".ui.NotificationsActivity" />
    </application>

</manifest>